<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.order_line') %></th>
      <th><%= t('.order') %></th>
      <th><%= t('.article') %></th>
      <th><%= t('.amount') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @order_lines.each do |order_line| %>
      <tr>
        <td><%= order_line.id %></td>
        <td><%= order_line.order_id %></td>
        <td><%= order_line.article.description %></td>
        <td><%= order_line.amount %></td>
        <td><%= link_to t('.show'), order_line %></td>
        <td><%= link_to t('.edit'), edit_order_line_path(order_line) %></td>
        <td><%= link_to t('.destroy'), order_line, method: :delete, data: { confirm: t('.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
